<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-5dp"
    android:background="@drawable/new_main_bg"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/plain_top_bg" >

        <Button
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/starxml"
            android:visibility="gone" />

        <Button
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@drawable/morexml"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rl_applist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8" >

                    <TextView
                        android:id="@+id/txtapplist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Application List"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtapplist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtapplist"
                        android:text="Enable/Disable Lock For WhatsApp"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2"
                    android:gravity="right" >
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lockstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8" >

                    <TextView
                        android:id="@+id/txtlockstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Lock Style"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtlockstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtlockstyle"
                        android:text="Change Lock Background"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2"
                    android:gravity="right" >
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlllllllllll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/btn_change_passcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8" >

                    <TextView
                        android:id="@+id/txtchangepasscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Change Passcode"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtchangepasscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtchangepasscode"
                        android:text="Change Lock Theme"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2"
                    android:gravity="right" >
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/rlllllllllll_pattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/btn_change_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/txtchangepattern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Change Pattern"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtchangepattern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtchangepattern"
                        android:text="Change Lock Theme"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2"
                    android:gravity="right" >
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7" >

                    <TextView
                        android:id="@+id/txtsound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Sound"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtsound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtsound"
                        android:text="Enable/Disable Lock Sound"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2" >

                    <ToggleButton
                        android:id="@+id/btn_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pinxml"
                        android:text="pin"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8" >

                    <TextView
                        android:id="@+id/txtvibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Vibration"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtvibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtvibrate"
                        android:text="Enable/Disable Lock Vibration"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2" >

                    <ToggleButton
                        android:id="@+id/btn_vibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pinxml"
                        android:text="pin"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlllllllll_lock_themes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8" >

                    <TextView
                        android:id="@+id/txtlocktheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Lock Theme"
                        android:textColor="#686868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/belowtxtlockthene"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtlocktheme"
                        android:text="change Lock Passcode"
                        android:textColor="#7d7d7d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.2"
                    android:gravity="right" >
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout><!--
